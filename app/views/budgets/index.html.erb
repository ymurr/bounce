


<div class="row">
  <div class="col-md-6 col-md-offset-3">

    <p id="notice" class="alert-success" align="center"><%= notice %></p>

<h1>Listing Budgets</h1>

<table>
  <thead>
    <tr>
      <th>Account</th>
      <th>Description</th>
      <th>Annual Budget</th>
      <th>Year To Date</th>
      <th>Prior Year To Date</th>
      <th>% Budget Used</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @budgets.each do |budget| %>
      <tr>
        <td><%= budget.account %></td>
        <td><%= budget.description %></td>
        <td><%= budget.annual_budget %></td>
        <td><%= budget.year_to_date %></td>
        <td><%= budget.prior_year_to_date %></td>
        <td><%= budget.percent_budget_used %></td>
        <td><%= link_to 'Show', budget %></td>
        <td><%= link_to 'Edit', edit_budget_path(budget) %></td>
        <td><%= link_to 'Destroy', budget, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<h2>Import Budgets</h2>


<%= form_tag import_budgets_path, multipart: true do %>
    <%= file_field_tag :file %>
    <%= button_tag "Import", class: "btn btn-primary"%>
<% end %>



<div id="alert" class = "alert-danger" align="center"><%= alert %></div>


<br/>
<br/>


<%= link_to 'New Budget', new_budget_path %>


<br/>
<br/>

<p>
  Download:
  <%= link_to "CSV", budgets_path(format: "csv") %> |
  <%= link_to "Excel", budgets_path(format: "xls") %>
</p>


  </div>
</div>
